# Environment variables template
# Copy this file to .env and fill in your values
# Make sure to set appropriate permissions: chmod 600 .env

# Personal information
NAME="Your Full Name"
EMAIL="your.email@example.com"
USERNAME="your-username"

# System configuration
HOSTNAME="nixos"  # System hostname (usually "nixos" for WSL, actual hostname for bare metal)
MACHINE_ID="nixos"  # Which machine config to use: desktop, laptop, nixos (for WSL), etc.
TIMEZONE="UTC"  # Your timezone (e.g., "America/New_York", "Europe/London", "UTC")
DEFAULT_LOCALE="en_US.UTF-8"  # Default system locale
LC_LOCALE="en_US.UTF-8"  # Locale for LC_* settings (address, monetary, etc.)

# WSL Detection (set to true for WSL environments)
IS_WSL="true"

# API Keys (optional)
GEMINI_API_KEY="your-gemini-api-key"
OPENAI_API_KEY="your-openai-api-key"

# SSH signing key (optional)
# SIGNING_KEY="your-ssh-signing-key"

# Flake configuration (optional - auto-detected if not set)
# FLAKE_ROOT="/path/to/your/flake"                                   # Root directory of this flake (auto-detected)

# Shell configuration (optional - auto-detected if not set)  
# NIXCATS_BASH_DIR="/path/to/nixCats-bash/rc"                       # For live-edit bash config (auto-detected)
# NIXCATS_BASH_THEME="catppuccin-mocha"                             # Bash theme
# NIXCATS_FISH_DIR="/path/to/nixCats-fish/config"                   # For live-edit fish config (auto-detected)

#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

# Build the true-commit utility from Nix wrapper and exec it
UTIL=$(nix-build --no-out-link --show-trace -E "(import $SCRIPT_DIR/lib/common.nix).gitUtils.trueCommit")
EXEC=$(find "$UTIL/bin" -type f -executable | head -1)
exec "$EXEC" "$@"

